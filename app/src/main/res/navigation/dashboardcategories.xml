<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardcategories"
    app:startDestination="@id/dashBoardCategories">
    <fragment
        android:id="@+id/dashBoardCategories"
        android:name="com.orders.resturantorder.Fragments.DashBoardCategories"
        android:label="MyOrderFragment"
        tools:layout="@layout/fragment_blank">
        <action
            android:id="@+id/action_dashBoardCategories_to_MyOrderFragment"
            app:destination="@id/MyOrderFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_dashBoardCategories_to_afterSelectionCategoryFragment"
            app:destination="@id/afterSelectionCategoryFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>
    <fragment
        android:id="@+id/afterSelectionCategoryFragment"
        android:name="com.orders.resturantorder.Fragments.AfterSelectionCategoryFragment"
        android:label="AfterSelectionCategoryFragment" >
        <action
            android:id="@+id/action_dashBoardCategories_to_MyOrderFragment"
            app:destination="@id/MyOrderFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_afterSelectionCategoryFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.orders.resturantorder.Fragments.CartFragment"
        android:label="CartFragment" />

</navigation>