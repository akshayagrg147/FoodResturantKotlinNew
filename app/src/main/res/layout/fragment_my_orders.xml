<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.orders.resturantorder.viewmodel.FragmentMyOrderViewModal" />
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.MyOrdersFragment">
    <TextView


        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:fontFamily="@font/avenirltstd_medium"
        android:padding="10dp"
        android:text="Select Order Type"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/cardview_dark_background"

        android:textSize="20sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/change_dining_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/dp_10"

        android:background="@drawable/roundcornernew"
        android:focusable="true"
        android:paddingStart="@dimen/settings_menu_inside_padding_horizontal"
        android:paddingTop="@dimen/settings_menu_inside_padding_vertical_single_line"
        android:paddingEnd="@dimen/settings_menu_inside_padding_horizontal"
        android:paddingBottom="@dimen/settings_menu_inside_padding_vertical_single_line">

        <TextView
            android:id="@+id/diningtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/avenirltstd_heavy"
            android:text="Dining"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="@dimen/text_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/change_deliverylayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/dp_10"

        android:background="@drawable/roundcornernew"
        android:focusable="true"
        android:paddingStart="@dimen/settings_menu_inside_padding_horizontal"
        android:paddingTop="@dimen/settings_menu_inside_padding_vertical_single_line"
        android:paddingEnd="@dimen/settings_menu_inside_padding_horizontal"
        android:paddingBottom="@dimen/settings_menu_inside_padding_vertical_single_line">

        <TextView
            android:id="@+id/deliverytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/avenirltstd_heavy"
            android:text="Delivery"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="@dimen/text_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/change_takeway_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/dp_10"

        android:background="@drawable/roundcornernew"
        android:focusable="true"
        android:paddingStart="@dimen/settings_menu_inside_padding_horizontal"
        android:paddingTop="@dimen/settings_menu_inside_padding_vertical_single_line"
        android:paddingEnd="@dimen/settings_menu_inside_padding_horizontal"
        android:paddingBottom="@dimen/settings_menu_inside_padding_vertical_single_line">

        <TextView
            android:id="@+id/takeaway_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:fontFamily="@font/avenirltstd_heavy"
            android:text="Takeaway"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="@dimen/text_12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
</layout>